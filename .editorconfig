# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,json,css,html}]
charset = utf-8

[app/*.html]
indent_style = tab
indent_size = 2

# Indentation override for all JS under app directory
[app/**.js]
indent_style = tab
indent_size = 2
